<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_cai_piao_shuang_se_qiu_1"
            style="@style/CaiPiao"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_cai_piao_shuang_se_qiu_2"

            style="@style/CaiPiao" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_cai_piao_shuang_se_qiu_3"

            style="@style/CaiPiao" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_cai_piao_shuang_se_qiu_4"

            style="@style/CaiPiao" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_cai_piao_shuang_se_qiu_5"
            style="@style/CaiPiao" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_cai_piao_shuang_se_qiu_6"
            style="@style/CaiPiao" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_cai_piao_shuang_se_qiu_7"
            style="@style/CaiPiao"
            android:layout_marginRight="20dp"
            android:background="@drawable/home_adjust_background_blue" />
    </LinearLayout>

    <Button
        android:id="@+id/tv_zhuaDanMuStart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="开始抓弹幕" />

    <Button
        android:id="@+id/tv_zhuaDanMuEnd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_zhuaDanMuStart"
        android:text="结束" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_cai_piao_top"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_toRightOf="@id/tv_zhuaDanMuStart"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>